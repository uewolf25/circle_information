<div class="main users-new post-background">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_tag("/login") do %>
          <p>メールアドレス<span class="require">*</span></p>
          <input name="email" value="<%= @email %>">
          <p>パスワード<span class="require">*</span></p>
          <input type="password" name="password" value="<%= @password %>">
          <span class="require">*は必須項目です。</span>
          <input type="submit" value="ログイン">
        <% end %>
      </div>
    </div>
  </div>
</div>
